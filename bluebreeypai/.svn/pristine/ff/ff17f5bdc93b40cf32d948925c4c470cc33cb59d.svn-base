body{
    background:#f5f5f5;
}
.pb-container{
    width:1140px;
    height:883px;
    background:#fff;
    border-radius:5px;
    box-shadow:0 0 5px #eee;
    margin:70px auto 137px;
    padding:30px;
}
 .pb-header{
    width:100%;
    height:30px;
    margin-bottom:30px;
     position:relative;
}
.pb-header span{
    display:block;
    float:left;
    width:510px;
    line-height:30px;
}
.pb-header h3{
    display:block;
    float:left;
    width:110px;
    font-size:24px;
    color:#4eb17d;
}
.pb-header .cate{
    display:block;
    float:right;
    width:90px;
    text-align:right;
    line-height:30px;
    position:relative;
}
.pb-header .cate i{
    content: "";
    display: block;
    width: 23px;
    height: 14px;
    position: absolute;
    top: 8px;
    left: 33px;
    background:url(../indexImg/cateIcon_03.png) no-repeat center center;
}
.cate-nav{
    border-radius: 10px;
    background: #fff;
    padding: 15px 25px;
    position: absolute;
    top: 35px;
    right: 0px;
    box-shadow:0 0 5px #eee ;
    display:none;
}
.cate-nav ul li a{
    line-height:30px;
    color:#666;
}
#input_blog_title{
    width:1140px;
    height:40px;
    border:1px solid #e6e6e6;
    background:#f8f8f8;
    text-indent:1.5em;
}