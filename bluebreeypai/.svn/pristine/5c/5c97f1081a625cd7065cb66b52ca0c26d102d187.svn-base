body{
    background:#f5f5f5;
}
.cg-container{
    width:1140px;
    background:#fff;
    border-radius:5px;
    box-shadow:0 0 5px #eee;
    margin:70px auto 137px;
    padding:30px;
}
.cg-header{
    width:100%;
    height:30px;
    margin-bottom:30px;
    position:relative;
}
.cg-header span{
    display:block;
    float:left;
    width:510px;
    line-height:30px;
}
.cg-header h3{
    display:block;
    float:left;
    width:110px;
    font-size:24px;
    color:#4eb17d;
}
.left-part{
    float:left;
    width:787px;
}
.right-part{
    float:right;
    width:300px;
}
.create-box{
    margin-bottom:50px;
}
.create-group-name{
    width:100%;
    line-height:40px;
}
.group-introduce{
    width:100%;
    line-height:40px;
    margin-top:30px;
}
.create-group-name label,.group-introduce label,.labelBox label,.contact label{
    float:left;
    font-size:16px;
    color:#109d59;
    width:97px;
    display:block;
    text-align:center;
}
.create-group-name input{
    float:right;
    width:688px;
    height:40px;
    background:#fff;
    border:1px solid #e6e6e6;
    text-indent:1em;
    display:block;
}
.group-introduce textarea{
    width:682px;
    height:212px;
    resize: none;
    border:1px solid #e6e6e6;
}

