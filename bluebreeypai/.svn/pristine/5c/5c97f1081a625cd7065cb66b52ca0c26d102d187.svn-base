}
.labelBox{
    width:100%;
    height:40px;
    background:#fff;
    margin-top:30px;
    line-height:40px;
    position:relative;
}
.clearFixBlog::after{
    content:"";
    display:block;
    clear:both;
}

.ipva{
    margin-left:8px;
    margin-bottom:0;
    border: none;
    float: left;
    display: block;
    outline: none;
    width:300px;
    background: none;
    height: 40px;
    line-height: 40px;
    font-size: 14px;
    color:#000;
    font-family: Î¢ÈíÑÅºÚ;
    text-indent: 3em;
}

 .i_inp{
     float: right;
     width: 688px;
     box-sizing: border-box;
     background: #fff;
     display: block;
     min-height: 30px;
     /* max-height: 37px; */
     height: 40px;
     border: 1px solid #dbdbdb;
     line-height: 40px;
     color: #b9b9b9;
     position: relative;
     padding-left: 50px;
}
.i_inp::after{
    content: "";
    display: block;
    width: 23px;
    height: 14px;
    position: absolute;
    top: 13px;
    left: 20px;
    background:url(../indexImg/labelIcon_03.png) no-repeat center center;
}

.recommend-label{
    margin-top:15px;
    margin-left:97px;
}
.recommend-label a{
    color:#747474;
