.p_container {
    height: 298px;
    width: 298px;
    /*margin: 30px auto 0 auto;*/
    position: relative;
    font-family: Î¢ÈíÑÅºÚ;
    font-size: 12px;
}
.p_container p {
    line-height: 12px;
    line-height: 0px;
    height: 0px;
    margin: 10px;
    color: #bbb
}
.p_action {
    width: 400px;
    height: 30px;
    margin: 10px 0;
}
.p_cropped {
    position: absolute;
    right: -230px;
    top: 0;
    width: 200px;
    border: 1px #ddd solid;
    height: 460px;
    padding: 4px;
    box-shadow: 0px 0px 12px #ddd;
    text-align: center;
    margin-right: -80px;
}
.imageBox {
    position: relative;
    height: 298px;
    width: 298px;
    border: 1px solid #e0e0e0;
    background: #fff;
    overflow: hidden;
    background-repeat: no-repeat;
    cursor: move;
}
.imageBox .thumbBox {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 200px;
    height: 200px;
    margin-top: -100px;
    margin-left: -100px;
    box-sizing: border-box;
    border: 1px solid rgb(102, 102, 102);
    box-shadow: 0 0 0 1000px rgba(0, 0, 0, 0.5);
    background: none repeat scroll 0% 0% transparent;
}
.imageBox .spinner {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    text-align: center;
    line-height: 400px;
    background: rgba(0,0,0,0.7);
}
.Btnsty_peyton{
    width: 38px;
    display: inline-block;
    height: 30px;
    line-height: 25px;
    font-size: 20px;
    color: #FFFFFF;
    margin: 0px 2px;
    background:rgba(0,0,0,0.5);
    border-radius: 3px;
    text-decoration: none;
    cursor: pointer;
    border: 0px  solid #fff;
}
.Btnsty_peyton#btnCrop{
    position: absolute;
    bottom: 0px;
    right: -2px;
    display:block;
    background:rgba(0,0,0,0.5) url(../indexImg/cut.png) no-repeat center center;
}
.Btnsty_peyton#btnZoomIn{
    position: absolute;
    bottom: 0px;
    left: 45px;
}
.Btnsty_peyton#btnZoomOut{
    position: absolute;
    bottom: 0px;
    left: 0px;
}

.p-mengban{
    position:absolute;
    top:0;
    left:0;
    width:100%;
    height:100%;
    z-index:9999;
    border:1px solid #e0e0e0;
    background:#f7f7f7 url(../indexImg/smileIcon_03.png) no-repeat center center;
}
.p-mengban:hover{
    cursor:pointer;
}
.p-mengban .p-mengban-word{
    color: #ccc;
    line-height: 405px;
    margin-left: 102px;
}
#upload-file{
    display: none;
}
