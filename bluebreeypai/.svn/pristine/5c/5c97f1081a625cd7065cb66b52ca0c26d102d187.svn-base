}

.ui-sortable{
    margin-left:50px;
}

.contact{
    margin-top:40px;
}
.contact-email,.contact-QQ{
   display:inline-block;
    width:334px;
    height:40px;
    border:1px solid #e6e6e6;
    margin-right: 12px;
    text-indent:1em;
    margin-bottom:16px;
}
.contact-QQ{
    margin:0;
}
.contact-tips{
    margin-left:98px;
    color:#666;
    font-size:14px;
}

#submitApply{
    width:158px;
    height:48px;
    margin:0 auto 19px;
    text-align:center;
    line-height:48px;
    background:#f68344;
    color:#fff;
    border:1px solid #f68344;
    border-radius:30px;
    display: block;
    font-size:18px;
    font-family: 'Î¢ÈíÑÅºÚ';
}
.agreement-label{
    display:block;
    width:268px;
    margin: 0 0 0 455px;
    font-size:14px;
}
.agreement-label a{
    color:#109d59;
}
form{
    position:relative;
}
.agreement{
    position: absolute;
    bottom: -1px;
    left: 430px;
    border: 1px solid #d6d6d6;
    width: 14px;
    height: 14px;
