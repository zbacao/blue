body{
    background:#f5f5f5;
}
.container{
    width:1200px;
    min-width:1200px;
    margin:70px auto 126px;
}
.container .song-introduce{
    width:100%;
    height:466px;
    background:#fff;
    margin-bottom:20px;
    box-shadow:0 5px 10px rgba(0,0,0,0.1);
}
.container .song-introduce .song-info{
    width:100%;
    height:70px;
}
.container .song-introduce .song-info .song-title{
    float:left;
    position:relative;
    text-indent:2em;
}
.container .song-introduce .song-info .song-title a{
    line-height:70px;
    font-size:18px;
    font-weight:700;
}
.container .song-introduce .song-info .song-title::after{
    content:"";
    display:block;
    width:16px;
    height:16px;
    position:absolute;
    right: -25px;
    top: 28px;
    background: url(../indexImg/musicIcon_03.png) no-repeat center center;
}
.container .song-introduce .song-info .play-num{
    float:right;
    line-height:70px;
    font-size:14px;
    margin-right:40px;
    color:#a1a1a1;
}
.container .song-introduce .song-info .play-num #play_num{
    margin-right:5px;
    color:#109d59;
}
.container .song-introduce .song-details{
    width:93.333333333%;
    height:260px;
    background:url(../indexImg/song-background_03.png) no-repeat center center;
    background-size:cover;
    padding:40px;
}
.container .song-introduce .song-details .song-pic{
    float:left;
    width:260px;
    height:260px;
    border-radius:5px;
}
.container .song-introduce .song-details .song-intro-cont{
    float:right;
    width:830px;
    height:250px;
    color:#fff;
    font-size:16px;
}
.container .song-introduce .song-control{
    width:100%;
    height:56px;
    /*background:darkgreen;*/
}

/*播放器控制 start */
.playutil {
    height: 100%;
    width:100%;
    position:relative;
}
.control {
    /*width: 330px;*/
}
.control>p {
    width: 50px;
    height:56px;
    text-align: center;
    float:left;
    line-height:56px;
}
.buttons {
    text-align: center;
    float:left;
}
.buttons a {
    margin: 8px 20px 0px 40px;
    width: 38px;
    height: 38px;
    border-radius: 50%;
    border: 1px solid #e5e5e5;
    display: block;
    line-height: 38px;
    text-align: center;
    background: #fff;
    float: left;
}
.buttons a img{
    width:16px;
    height:16px;
    vertical-align: middle;
    margin-bottom: 2px;
    margin-left: 1px;
}
/*播放器控制 end */

.container .common-deatails{
    width:100%;
    /*height:900px;*/
    background:#f5f5f5;
    box-shadow:0 5px 10px rgba(0,0,0,0.1);
}
.container .common-deatails .artical-cont{
    float:left;
    width:810px;
    background:#fff;
    border-radius:3px;
    padding:30px;
}
.container .common-deatails .artical-cont .yj-artical{
    border-bottom:1px solid #e0e0e0;
    height:100px;
    margin-bottom:30px;
}
.container .common-deatails .artical-cont .yj-artical h3{
    text-align: center;
    font-size:22px;
}
.container .common-deatails .artical-cont .yj-artical .yj-artical-info{
    line-height:54px;
}
.container .common-deatails .artical-cont .yj-artical .yj-artical-info .eye-wechat{
    float:left;
}
.container .common-deatails .artical-cont .yj-artical .yj-artical-info .eye-wechat span{
    float:left;
    margin-right:43px;
    text-indent:23px;
    color:#999;
}
.container .common-deatails .artical-cont .yj-artical .yj-artical-info .create-time{
    float:right;
    color:#999;
}


/*文章具体内容*/
.artical-cont-details p{
    font-size:14px;
    line-height:25px;
    letter-spacing:2px;
    color:#666;
}
.artical-cont-details p img{
   width:100%;
    height:360px;
    margin-top:20px;
}
.artical-cont-details p span{
    color:#fff;
    display:inline-block;
    background:#999;
    text-align:center;
    padding:0 10px;
    border-radius:20px;
    margin-left:10px;
    font-size:12px;
}
.artical-cont-details p span#label_travel{
    margin-left:22px;
}
.container .common-deatails .artical-other{
    float:right;
    width:301px;
    background:darkgreen;
    border-radius:3px;
}
/*导航下面的小三角颜色单独设置*/
.header .header-in .main-nav   li a.navs.on::after{
    border-bottom:11px solid #f5f5f5;
}



