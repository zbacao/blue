/*页面的副导航栏样式*/
.wrap{
	background-color: #f2f2f2;
}
.clearfix::after{
	content:"";
	clear: both;
	display: block;
}
.ts-header{
	width: 100%;
	background-color: #fff;
}
.ts-nav{
	width: 1200px;
	min-width: 1200px;
	background-color: #fff;
	height: 70px;
	margin: 0 auto;
}
.ts-nav .ts-drag{
	float: left;
	width: 90px;
	border-right: 1px solid #f5f5f5;
	border-left: 1px solid #f5f5f5;
	background-color: #fff;
	height: 70px;
	overflow: hidden;
	color: #4c4c4c;
	position: absolute;
}
.ts-nav .ts-drag.on{
	height: auto;
}
.ts-nav .ts-drag .ts-navtitle{
	width: 100%;
	text-indent: 10px;
	font-size: 16px;
	font-weight: bold;
	text-align: left;
	height: 70px;
	line-height: 70px;
	display: block;
	cursor: pointer;
}
.ts-nav .ts-drag .ts-navtitle i{
	display: inline-block;
	background: url(../image/listenSpeak/spriteicon.png) 0 -37px;
	width: 12px;
	height: 6px;
	margin-left: 10px;
}
.ts-nav .ts-drag em{
	line-height: 40px;
	text-indent: 10px;
	display: block;
	height: 40px;
	color: #383838;
	cursor: pointer;
}
.ts-nav .ts-drag em.on{
	background-color: #f6faf8;
	color: #109d59;
}
.ts-nav .ts-navsel{
	float: left;
	height: 100%;
	width: 1000px;
	text-align: center;
	margin-left: 90px;
}

.ts-nav .ts-navsel>span{
	display: block;
	width: 100%;
	font-size: 0px;
	margin: 0 auto;
	overflow: hidden;
}

.ts-nav .ts-seareng i{
	font-size: 14px;
	display: inline-block;
	margin:10px 10px;
	width: 20px;
	height: 20px;
	cursor: pointer;
}
.ts-nav .ts-seareng i.on{
	background-color: #248675;
	color: #fff;
	border-radius:2px;
}
.ts-nav .ts-searchs .ts-searchs-cont{
	font-size: 0px;
	display: block;
	margin: 0 auto;
	width: 100%;
	height: 24px;
	overflow: hidden;
}
.ts-nav .ts-searchs .ts-searchs-cont span{
	display: inline-block;
	white-space: nowrap;
	width: 900px;
	overflow: hidden;
}
.ts-nav .ts-searchs-cont a{
	font-size: 14px;
	display: inline-block;
	width: 54px;
	text-align: center;
	position: relative;
	left: 0;
}
.ts-nav .ts-searchs-cont a.on{
	color: #109d59;
}
.ts-nav .ts-searchs .ts-navbtn-l{
	display: block;
	float: left;
	margin-top: 5px;
	margin-left: 35px;
	width: 10px;
	height: 20px;
	background:url(../image/listenSpeak/spriteicon.png) 0 0 no-repeat;
	cursor: pointer;
}
.ts-nav .ts-searchs .ts-navbtn-r{
	display: block;
	margin-top: 5px;
	margin-right: 35px;
	float: right;
	width: 10px;
	height: 20px;
	background:url(../image/listenSpeak/spriteicon.png) -14px 0 no-repeat;
	cursor: pointer;
}
.ts-nav .ts-searchs-cont a{
	padding: 0 8px;
}
.ts-nav .ts-push{
	float: right;
	width: 100px;
	height: 30px;
	margin-top: 20px;
	border-radius: 15px;
	border:1px solid #109d59;
	cursor: pointer;
}
.ts-nav .tsfb-btn{
	display: inline-block;
	height: 30px;
	line-height: 30px;
	font-size: 16px;
	color: #109d59;
	text-align: center;
	width: 100%;
}
.ts-nav .tsfb-btn i{
	background: url(../image/listenSpeak/spriteicon.png) 0 -118px no-repeat;
	display: inline-block;
	width: 16px;
	height: 15px;
	margin-right: 6px;
}
/*副导航样式结束*/

/*左侧绿色的导航栏样式*/
.ts-leftnav{
	position: fixed;
	left: 0;
	top:260px;
	width: 54px;
	height: 200px;
	background-color: #109d59;
}
.ts-leftnav .ts-leftnav-cont{
	margin-top: 20px;
	margin-bottom: 20px;
	font-size: 14px;
}
.ts-leftnav .ts-leftnav-cont a{
	display: block;
	margin:15px auto;
	width: 20px;
	height: 15px;
	background-image: url(../image/listenSpeak/spriteicon.png);
	text-align: center;
}
.ts-leftnav .ts-leftnav-tab1{
	background-position: 3px -57px;
}
.ts-leftnav .ts-leftnav-cont .ts-leftnav-tab2{
	
	background-position: 0 -135px;
}
.ts-leftnav .ts-leftnav-tab3{
	background-position: 4px -22px;
}
.ts-leftnav .ts-leftnav-tab4{
	background-position: 3px -42px;
}
.ts-leftnav .ts-leftnav-tab5{
	background-position: 3px -87px;
}
.ts-leftnav .ts-leftnav-tab6{
	background-position: 3px -102px;
}
