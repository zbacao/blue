/* 内容区样式 */
.ts-container{
	width: 1220px;
	height: 1600px;
	margin: 0 auto;
	margin-top: 20px;

}
/*凡是带ts-card的都是卡片的样式*/
.ts-container .ts-card{
	border-radius: 5px;
	width: 280px;
	margin: 0 10px;
	background-color: #fff;
	margin-bottom: 20px;
	display: inline-block;
	font-size: 0;
	vertical-align: top;
}
.ts-card .ts-card-head{
	height: 80px;
	width: 100%;
	text-align: left;
}
.ts-card .ts-card-head .ts-cardicon{
	display: inline-block;
	width: 40px;
	height: 40px;
	background: url(../image/listenSpeak/touxiang.png) center no-repeat;
	padding:10px;
	padding-top: 18px;
}
.ts-card .ts-card-head .ts-cardname{
	display: inline-block;
	width: 164px;
	text-align: left;
	vertical-align: top;
}
.ts-card .ts-card-head .ts-cardname p{
	font-weight: normal;
	font-size: 16px;
	color:#131719; 
	display: block;
	margin-top: 15px;
}
.ts-card .ts-card-head .ts-cardname em{
	font-size: 12px;
	color: #999999;
}
.ts-card .ts-card-head i{
	display: inline-block;
	font-size: 14px;
	width: 48px;
	height: 20px;
	border-radius: 10px;
	line-height: 20px;
	border:1px solid #8dd539;
	text-align: center;
	vertical-align: top;
	margin-top: 15px;
}
.ts-card img{
	width: 100%;
}
.ts-card .ts-card-foot{
	height: 80px;
	width: 100%;
}
.ts-card .ts-card-foot p{
	padding-top: 16px;
	font-size: 14px;
	padding-left: 10px;
	color: #4c4c4c;
}
.ts-card .ts-card-foot .ts-cardfoot-icon{
	display: block;
	padding-left: 10px;
	height:30px;
	line-height: 30px;
	font-size: 12px;
	color: #cccccc;
}
.ts-card .ts-card-foot .ts-cardicon1{
	display: inline-block;
	width:14px;
	height:14px;
	background:url(../image/listenSpeak/spriteicon.png) 0 -73px no-repeat;
	cursor: pointer;
}
.ts-card .ts-card-foot .ts-cardicon2{
	display: inline-block;
	width:20px;
	height:14px;
	background:url(../image/listenSpeak/spriteicon.png) 0 -150px no-repeat;
	cursor: pointer;
}
.ts-card .ts-card-foot i{
	padding: 5px;
}
/*卡片样式完成*/
/*底部导航样式*/
.ts-page{
	width: 100%;
	text-align: center;
	margin-top: 30px;
}
.ts-page span{
	display: inline-block;
	height: 30px;
	line-height: 30px;
	padding:0 12px;
	background-color: #fff;
	text-align: center;
	font-size: 14px;
	cursor: pointer;
	margin:0 4px;
}
