        #login_account,#login_pwd,
        #reg_account,#reg_pwd,#reg_pwd_confirm{
            width:99%;
            height:38px;
            border:1px solid #fff;
            background:#fff;
            text-indent:1em;
            font-size:14px;
            padding:0;
        }
        #login_pwd,
        #reg_pwd,#reg_pwd_confirm{
            margin-top:10px;
        }
        .check_code{
            margin-top:10px;
            width:99%;
            height:40px;
        }
        .check_code div:nth-child(1){
            float:left;
            width:143px;
        }
        .check_code div:nth-child(2){
            float:right;
            width:143px;;
        }
        #check_code_input1,
        #check_code_input2{
            width:141px;
            height:38px;
            border:1px solid #fff;
            background:#fff;
            text-indent:1em;
            font-size:14px;
            padding:0;
        }
        .check_code .check-pic img{
            width:143px;
            height:40px;
            padding:0;
        }
        .check_code .check-pic img:hover{
            cursor:pointer;
        }
        #login-btn,#reg-btn{
            display:block;
            width:99%;
            height:38px;
            border:1px solid #7fa900;
            margin-top:30px;
            background:#7fa900;
            color:#fff;
            font-size:18px;
            font-family:"微软雅黑";
            transition:background 0.4s;
        }
        #login-btn:hover{
            background: #94cb00;
            cursor:pointer;
        }
        #reg-btn:hover{
            background: #94cb00;
            cursor:pointer;
        }
