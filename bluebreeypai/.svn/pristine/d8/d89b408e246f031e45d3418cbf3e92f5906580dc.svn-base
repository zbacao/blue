/*页面的副导航栏样式*/
.wrap{
	background-color: #f2f2f2;
}
.clearfix::after{
	content:"";
	clear: both;
	display: block;
}
.ts-header{
	width: 100%;
	background-color: #fff;
}
.ts-nav{
	width: 1200px;
	min-width: 1200px;
	background-color: #fff;
	height: 70px;
	margin: 0 auto;
}
.ts-nav .ts-drag{
	float: left;
	width: 90px;
	border-right: 1px solid #f5f5f5;
	border-left: 1px solid #f5f5f5;
	background-color: #fff;
	height: 70px;
	overflow: hidden;
	color: #4c4c4c;
	position: absolute;
}
.ts-nav .ts-drag.on{
	height: auto;
}
.ts-nav .ts-drag .ts-navtitle{
	width: 100%;
	text-indent: 10px;
	font-size: 16px;
	font-weight: bold;
	text-align: left;
	height: 70px;
	line-height: 70px;
	display: block;
	cursor: pointer;
}
.ts-nav .ts-drag .ts-navtitle i{
	display: inline-block;
	background: url(../image/listenSpeak/spriteicon.png) 0 -37px;
	width: 12px;
	height: 6px;
	margin-left: 10px;
}
.ts-nav .ts-drag em{
	line-height: 40px;
	text-indent: 10px;
	display: block;
	height: 40px;
	color: #383838;
	cursor: pointer;
}
.ts-nav .ts-drag em.on{
	background-color: #f6faf8;
	color: #109d59;
}
.ts-nav .ts-navsel{
	float: left;
	height: 100%;
	width: 1000px;
	text-align: center;
	margin-left: 90px;
}

.ts-nav .ts-navsel>span{
	display: block;
	width: 100%;
	font-size: 0px;
	margin: 0 auto;
	overflow: hidden;
}

.ts-nav .ts-seareng i{
	font-size: 14px;
	display: inline-block;
	margin:10px 10px;
	width: 20px;
	height: 20px;
	cursor: pointer;
}
.ts-nav .ts-seareng i.on{
	background-color: #248675;
	color: #fff;
	border-radius:2px;
}
.ts-nav .ts-searchs .ts-searchs-cont{
	font-size: 0px;
	display: block;
	margin: 0 auto;
	width: 100%;
	height: 24px;
	overflow: hidden;
}
.ts-nav .ts-searchs .ts-searchs-cont span{
	display: inline-block;
	white-space: nowrap;
	width: 900px;
	overflow: hidden;
}
.ts-nav .ts-searchs-cont a{
	font-size: 14px;
	display: inline-block;
	width: 54px;
	text-align: center;
	position: relative;
	left: 0;
}
.ts-nav .ts-searchs-cont a.on{
	color: #109d59;
}
.ts-nav .ts-searchs .ts-navbtn-l{
	display: block;
	float: left;
	margin-top: 5px;
	margin-left: 35px;
	width: 10px;
	height: 20px;
	background:url(../image/listenSpeak/spriteicon.png) 0 0 no-repeat;
	cursor: pointer;
}
.ts-nav .ts-searchs .ts-navbtn-r{
	display: block;
	margin-top: 5px;
	margin-right: 35px;
	float: right;
	width: 10px;
	height: 20px;
	background:url(../image/listenSpeak/spriteicon.png) -14px 0 no-repeat;
	cursor: pointer;
}
.ts-nav .ts-searchs-cont a{
	padding: 0 8px;
}
.ts-nav .ts-push{
	float: right;
	width: 100px;
	height: 30px;
	margin-top: 20px;
	border-radius: 15px;
	border:1px solid #109d59;
	cursor: pointer;
}
.ts-nav .tsfb-btn{
	display: inline-block;
	height: 30px;
	line-height: 30px;
	font-size: 16px;
	color: #109d59;
	text-align: center;
	width: 100%;
}
.ts-nav .tsfb-btn i{
	background: url(../image/listenSpeak/spriteicon.png) 0 -118px no-repeat;
	display: inline-block;
	width: 16px;
	height: 15px;
	margin-right: 6px;
}
/*副导航样式结束*/

/*左侧绿色的导航栏样式*/
.ts-leftnav{
	position: fixed;
	left: 0;
	top:260px;
	width: 54px;
	height: 200px;
	background-color: #109d59;
}
.ts-leftnav .ts-leftnav-cont{
	margin-top: 20px;
	margin-bottom: 20px;
	font-size: 14px;
}
.ts-leftnav .ts-leftnav-cont a{
	display: block;
	margin:15px auto;
	width: 20px;
	height: 15px;
	background-image: url(../image/listenSpeak/spriteicon.png);
	text-align: center;
}
.ts-leftnav .ts-leftnav-tab1{
	background-position: 3px -57px;
}
.ts-leftnav .ts-leftnav-cont .ts-leftnav-tab2{
	
	background-position: 0 -135px;
}
.ts-leftnav .ts-leftnav-tab3{
	background-position: 4px -22px;
}
.ts-leftnav .ts-leftnav-tab4{
	background-position: 3px -42px;
}
.ts-leftnav .ts-leftnav-tab5{
	background-position: 3px -87px;
}
.ts-leftnav .ts-leftnav-tab6{
	background-position: 3px -102px;
}


/* 内容区样式 */
.ts-container{
	width: 1224px;
	height: 1600px;
	margin: 0 auto;
	margin-top: 20px;
	position: relative;
	text-align: center;
}
/*凡是带ts-card的都是卡片的样式*/
.ts-container .ts-card{
	border-radius: 5px;
	width: 280px;
	margin: 0 10px;
	background-color: #fff;
	margin-bottom: 15px;
	display: inline-block;
	font-size: 0;
	vertical-align: top;
	cursor: pointer;
}
.ts-card .ts-card-head{
	height: 80px;
	width: 100%;
	text-align: left;
}
.ts-cardicon{
	display: inline-block;
	width: 40px;
	height: 40px;
	background: url(../image/listenSpeak/touxiang.png) center no-repeat;
	padding:10px;
	padding-top: 18px;
}
.ts-cardname{
	display: inline-block;
	width: 164px;
	text-align: left;
	vertical-align: top;
}
.ts-cardname p{
	font-weight: normal;
	font-size: 16px;
	color:#131719; 
	display: block;
	margin-top: 15px;
}
.ts-cardname em{
	font-size: 12px;
	color: #999999;
}
.ts-card-head i{
	display: inline-block;
	font-size: 14px;
	width: 48px;
	height: 20px;
	border-radius: 10px;
	line-height: 20px;
	border:1px solid #8dd539;
	text-align: center;
	vertical-align: top;
	margin-top: 15px;
}
.ts-card img{
	width: 100%;
}
.ts-card .ts-card-foot{
	margin-top: 15px;
	height: auto;
	width: 100%;
}
.ts-card .ts-card-foot p{
	padding-top: 16px;
	font-size: 14px;
	padding-left: 10px;
	color: #4c4c4c;
}
.ts-card .ts-card-foot .ts-cardfoot-icon{
	display: block;
	padding-left: 10px;
	height:30px;
	line-height: 30px;
	font-size: 12px;
	color: #cccccc;
}
.ts-cardicon1{
	display: inline-block;
	width:14px;
	height:14px;
	background:url(../image/listenSpeak/spriteicon.png) 0 -73px no-repeat;
	cursor: pointer;
}
.ts-cardicon2{
	display: inline-block;
	width:20px;
	height:14px;
	background:url(../image/listenSpeak/spriteicon.png) 0 -150px no-repeat;
	cursor: pointer;
}
.ts-cardfoot-icon i{
	padding: 5px;
	color: #ccc;
}
/*卡片样式完成*/
/*底部导航样式*/
.ts-page{
	position: absolute;
	bottom: 0;
	width: 100%;
	text-align: center;
	margin-bottom: 100px;
}
.ts-page span{
	display: inline-block;
	height: 30px;
	line-height: 30px;
	padding:0 12px;
	background-color: #fff;
	text-align: center;
	font-size: 14px;
	cursor: pointer;
	margin:0 4px;
	box-shadow: 0px 2px 3px gray;
}
.ts-page span.on{
	background-color: #109d59;
	color: #fff;
}

/*点击卡片的弹出框样式  底层要有蒙版*/
.ts-popcard{
	display: none;
	position: absolute;
	right: 0;
	left: 0;
	top: 0;
	margin: 200px auto;
	background-color: #fff;
	width: 735px;
	padding-bottom: 30px;
	z-index: 999;
}
.ts-popcard img{
	display: block;
	width: 95%;
	margin:10px auto;
}
.ts-popcard .ts-poptitle{
	position: relative;
	border-bottom: 1px solid #e4e4e4;
}
.ts-popcard .ts-cardicon{
	margin-left: 30px;
}
.ts-popcard .ts-poptitle>i{
	float: right;
	display: inline-block;
	font-size: 14px;
	width: 48px;
	height: 20px;
	border-radius: 10px;
	line-height: 20px;
	border:1px solid #ff5777;
	text-align: center;
	vertical-align: top;
	margin-top: 15px;
	margin-right: 20px;
	color:#ff5777;
}
.ts-popcard .ts-cardfoot-icon{
	position: absolute;
	bottom:10px;
	right: 10px;
}
.ts-popcard .ts-comtit{
	width: 100%;
	height: 46px;
	border-bottom: 1px solid #e4e4e4;
}
.ts-comtit span{
	font-size: 16px;
	display: block;
	padding-left: 40px;
	padding-top: 15px;
	color: #333333;
}
.ts-comtit span::before{
	content: "";
	display: inline-block;
	position: relative;
	top: 3px;
	left: -8px;
	height: 18px;
	width: 3px;
	background-color: #f68344;
}
.ts-comtit span i{
	color: #666666;
	font-size: 14px;
}
.ts-popcomment{
	width: 100%;
	border-bottom: 1px solid #e4e4e4;
	position: relative;
}
.ts-popcomment .ts-popcomicon{
	display: inline-block;
	width: 50px;
	height: 50px;
	overflow: hidden;
	border-radius: 50%;
	margin-top: 25px;
	margin-left: 30px;
}
.ts-popcomment .ts-popcomicon img{
	width: 50px;
	margin: 0;
}
.ts-popcomment .ts-comcont{
	display: inline-block;
	vertical-align: top;
	margin-top: 25px;
	margin-bottom: 40px;

}
.ts-popcomment .ts-cardfoot-icon{
	top: 20px;
	right: 10px;
}
.ts-popcomment .ts-comcont>b{
	font-size:14px; 
	padding:0 10px;
	color: #333333;
}
.ts-popcomment .ts-comcont>i{
	font-size: 12px;
	color: #999999;
}
.ts-popcomment .ts-comcont p{
	font-size: 14px;
	color: #0b0b0b;
	margin: 5px 0 0 10px;
	line-height: 22px;
}
.ts-popreplay{
	background-color: #fafafa;
	border-bottom: 1px solid #e4e4e4;
	padding-bottom: 40px;
	position: relative;
}
.ts-popreplay::before{
	content: "";
	display: block;
	border-width: 14px 9px;
	border-style: solid;
	position: absolute;
	border-color: transparent transparent #e8e8e8 transparent;
	right: 85px;
	top:-28px;
}
.ts-popreplay .tspop-tri{
	content: "";
	display: block;
	border-width: 12px 6px;
	border-style: solid;
	position: absolute;
	border-color: transparent transparent #fafafa transparent;
	right: 88px;
	top:-24px;
}
.ts-popreplay .ts-replaycont{
	margin-top: 15px;
	width: 670px;
	text-align: center;
	float: right;
}
.ts-popreplay .ts-replaycont input{
	display: inline-block;
	width: 550px;
	line-height: 34px;
	border: 1px solid #e6e6e6;
}
.ts-popreplay .ts-replaycont a{
	display: inline-block;
	width: 80px;
	height: 36px;
	background-color: #f68344;
	font-size: 16px;
	text-align: center;
	line-height: 36px;
	border-radius: 5px;
	color: #fff;
	margin-left: 8px;
	vertical-align:middle;
}
.ts-popreplay i{
	position: absolute;
	bottom: 15px;
	right: 50px;
	width: 10px;
	height: 6px;
	background: url(../image/listenSpeak/dropup.png) no-repeat center;
	cursor:pointer;
}
/*弹出框样式结束  记住有部分样式与主页面公用 移植时要注意*/
.mengban{
	display: none;
	position: fixed;
	top: 0;
	bottom:0;
	right: 0;
	left: 0;
	opacity: 0.3;
	background-color:#000;
	z-index: 99; 
}
