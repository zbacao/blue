/*文章具体内容*/
.artical-module{
    box-shadow: 0 5px 10px rgba(0,0,0,0.1);
}
.artical-cont-details .blog-details{
    width:100%;
}
.artical-cont-details .blog-details p{
    font-size:14px;
    line-height:25px;
    letter-spacing:2px;
    color:#666;
}
.artical-cont-details .blog-details p img.blog-pic{
    display:block;
    max-width:100%;
    margin-top:20px;
}
.artical-cont-details .blog-details .blog-labels{
    margin-top:20px;
    position:relative;
}
.artical-cont-details .blog-details .blog-labels::before{
    content:"";
    display:block;
    width:23px;
    height:14px;
    position:absolute;
    top: 4px;
    left: -4px;
    background:url(../indexImg/labelIcon_03.png) no-repeat center center;
}
.artical-cont-details .blog-details  .blog-labels span{
    color:#fff;
    display:inline-block;
    background:#999;
    text-align:center;
    padding:0 10px;
    border-radius:20px;
    margin-left:10px;
    font-size:12px;
}
.artical-cont-details .blog-details .endIcon{
    width:810px;
    height:172px;
    text-align:center;
}
.artical-cont-details .blog-details .endIcon img{
    width:56px;
    height:84px;
    margin-top: 42px;
}
.artical-cont-details .blog-details span#label_travel{
    margin-left:22px;
}

/*小组简介 start*/
.group-summary{
    font-size:16px;
    margin-top:30px;
    color:#494949;
}
.group-summary-cont{
    font-size:14px;
    margin-top:7px;
    line-height:22px;
    color:#666;
}
/*小组简介 end*/
.report{
    display:block;
    position:absolute;
    bottom:20px;
    right:30px;
    color:#999;
}
.report{
    cursor:pointer;
}
/*正文内容 end*/

/*加入小组 start*/
.join-group-title{
    font-size:18px;
    font-weight:500;
}
#input_blog_title{
    width:100%;
    height:40px;
    border:1px solid #e6e6e6;
    background:#f8f8f8;
    text-indent:1.5em;
    font-size:14px;
}

#blog-editer{
    width: 812px;
    background: #eee;
    overflow: hidden;
    height: 136px;
    position:relative;
}
.Editor-editor{
    outline:0;
}
.group-introduce-input{
    outline: 0;
    border-left: 1px solid #e6e6e6;
    border-right: 1px solid #e6e6e6;
    border-top: none;
    border-bottom: none;
    width: 99.3%;
    height: 136px;
    overflow: auto;
    resize: none;
}
.labelBox{
    width: 100%;
    height: 40px;
    background: #fff;
    border: 1px solid #dbdbdb;
    line-height: 40px;
    color: #b9b9b9;
    position: relative;
}
.labelBox::after{
    content: "";
    display: block;
    width: 23px;
    height: 14px;
    position: absolute;
    top: 13px;
    left: 20px;
    background:url(../indexImg/labelIcon_03.png) no-repeat center center;
}
.clearFixBlog::after{
    content:"";
    display:block;
    clear:both;
}

.ipva{
    margin-left:8px;
    margin-bottom:0;
    border: none;
    float: left;
    display: block;
    outline: none;
    width:300px;
    background: none;
    height: 40px;
    line-height: 40px;
    font-size: 14px;
    color:#000;
    font-family: 微软雅黑;
}

.i_inp{
    min-height:30px;
    margin-left:50px;
}

.upload-music{
    position:absolute;
    left:0px;
    bottom:0px;
}
/*.upload-music .upload-music-title{*/
    /*font-size:16px;*/
    /*color:#333;*/
    /*margin-right:20px;*/
/*}*/
/*.upload-music .upload-music-tips{*/
    /*color:#109d59;*/
    /*font-size:12px;*/
    /*margin-right:40px;*/
/*}*/
.upload-music i{
    display:inline-block;
    width:40px;
    height:36px;
    line-height:30px;
    text-align:center;
    color:#999;
    font-size: 14px;
    margin-left:30px;
    position:relative;
}
.upload-music i:hover{
    cursor:pointer;
}
.upload-music #musicBtn::before,
.upload-music #picBtn::before{
    content: "";
    display: block;
    width: 23px;
    height: 14px;
    position: absolute;
    top: 8px;
    left: -20px;
}
.upload-music #musicBtn::before{
    left: -17px;
    background:url(../indexImg/onload_03.png) no-repeat center center;
}
.upload-music #picBtn::before{
    background:url(../indexImg/onload_05.png) no-repeat center center;
}
.upload-music #fileTypeTips{
    font-style: normal;
    color:#40bc83;
    font-size:12px;
    display:none;
}
.upload-music input.input-of-btn{
    position: absolute;
    width: 160px;
    top: 5px;
    left: 302px;
    visibility: hidden;
}
.upload-music .music-name{
    position: absolute;
    top: 6px;
    left: 471px;
}
.submitBtn{
    text-align:right;
}
.submitBtn #publicBlog{
    border-radius: 4px;
    margin-top: 20px;
    background: #f68344;
    height: 40px;
    line-height: 40px;
    width: 100px;
    color: #fff;
    border: none;
    transition: background 0.4s;
}
.submitBtn #publicBlog:hover{
    background: #e3753f;
    cursor: pointer;
}
/*加入小组 end*/

/*相关阅读 start*/
.artical-cont-details .related-read{
    width:100%;
}
.artical-cont-details .related-read .related-read-title{
    border-bottom:1px solid #e0e0e0;
    padding:10px 0;
}
.artical-cont-details .related-read .related-read-title a{
    color:#4d4d4d;
    font-size:16px;
    line-height:16px;
}
.artical-cont-details .related-read .related-read-cont{
    width:100%;
    padding:10px 0;
}
.artical-cont-details .related-read .related-read-cont .related-read-cont-show{
    width: 389px;
    height: 170px;
    float: left;
    margin-bottom:20px;
}
.artical-cont-details .related-read .related-read-cont .related-read-cont-show a{
    display:block;
}
.artical-cont-details .related-read .related-read-cont .related-read-cont-show:nth-child(1){
    margin-right:30px;
}
.artical-cont-details .related-read .related-read-cont .related-read-cont-show:nth-child(3){
    margin-right:30px;
}
.artical-cont-details .related-read .related-read-cont .related-read-cont-show img.related-read-pic{
    width:100%;
    height:130px;
    display:block;
}
.artical-cont-details .related-read .related-read-cont .related-read-cont-show p.related-read-summary{
    line-height:40px;
}

.artical-cont-details .related-read .related-read-share{
    border-bottom:1px solid #e0e0e0;
    padding:20px 5px;
}
.artical-cont-details .related-read .related-read-share .share-left{
    float:left;
}
.artical-cont-details .related-read .related-read-share .share-left a{
    display:inline-block;
    margin-right:5px;
}
.artical-cont-details .related-read .related-read-share .share-left span{
    line-height:30px;
    color:#999;
    text-indent:2px;
}
.artical-cont-details .related-read .related-read-share .share-right{
    float:right;
    position:relative;
}
.artical-cont-details .related-read .related-read-share .share-right a{
    display:inline-block;
    padding:7px 12px;
    text-align:center;
    border:1px solid #9da09e;
    border-radius:20px;
    background:#fff;
    margin-right:10px;
    color:#999;
}
.artical-cont-details .related-read .related-read-share .share-right a:nth-child(1){
    background:#e5f2f5;
    border:1px solid #e5f2f5;
    color:#14abd1;
    /*padding:5px 8px;*/
}
.artical-cont-details .related-read .related-read-share .share-right .report{
    position:absolute;
    bottom:-30px;
    right:11px;
    display:inline-block;
    padding:0;
    text-align:center;
    border:none;
    border-radius:0;
    background:#fff;
    margin:0;
}
.artical-cont-details .related-read .related-read-share .share-right img{
    vertical-align: -3px;
}
/*相关阅读 end*/

/*互动评论区 start*/
.artical-cont-details  .blog-comment .who-zan{
    width:100%;
    line-height:50px;
    /*background:darkcyan;*/
    overflow:hidden;
}
.artical-cont-details  .blog-comment .who-zan h4{
    text-indent:10px;
    margin-bottom:10px;
    position:relative;
}
.artical-cont-details  .blog-comment .who-zan h4::before{
    content: "";
    width: 4px;
    height: 35%;
    background: #f68344;
    position: absolute;
    top: 16px;
    left: 0;
}
.artical-cont-details  .blog-comment .who-zan .who-zan-people{
    width:50px;
    float:left;
    margin-right:20px;
}
.artical-cont-details  .blog-comment .who-zan .who-zan-people img{
    width:50px;
    height:50px;
    border-radius:50%;
    display:block;
}
.artical-cont-details  .blog-comment .who-zan .who-zan-people span{
    line-height:30px;
    text-align:center;
    display:block;
    color:#747474;
}
.artical-cont-details  .blog-comment .theme-pic{
    width:100%;
    margin:40px 0;
}

/*评论和回复模块 start*/
.ts-cardfoot-icon{
    position:relative;
}
.ts-cardicon1{
    display: block;
    width: 23px;
    height: 14px;
    position: absolute;
    top: 2px;
    left: 41px;
    background:url(../indexImg/gray-wechat.png) no-repeat center center;
    cursor:pointer;
}
.ts-cardicon2{
    display: block;
    width: 23px;
    height: 14px;
    position: absolute;
    top: 1px;
    left: 3px;
    background:url(../image/listenSpeak/spriteicon.png) 0 -73px no-repeat;
    cursor:pointer;
}
.ts-popcomment{
    width: 100%;
    border-bottom: 1px solid #e4e4e4;
    position: relative;
}
.ts-popcomment .ts-popcomicon{
    display: inline-block;
    width: 50px;
    height: 50px;
    overflow: hidden;
    border-radius: 50%;
    margin-top: 25px;
    margin-left: 30px;
}
.ts-popcomment .ts-popcomicon img{
    width: 50px;
    margin: 0;
}
.ts-popcomment .ts-comcont{
    display: inline-block;
    vertical-align: top;
    margin-top: 25px;
    margin-bottom: 40px;

}
.ts-popcomment .ts-cardfoot-icon{
    top: 20px;
    right: 10px;
}
.ts-popcomment .ts-comcont>b{
    font-size:14px;
    padding:0 10px;
    color: #333333;
}
.ts-popcomment .ts-comcont>i{
    font-size: 12px;
    color: #999999;
}
.ts-popcomment .ts-comcont p{
    font-size: 14px;
    color: #0b0b0b;
    margin: 5px 0 0 10px;
    line-height: 22px;
}
.ts-popreplay{
    background-color: #fafafa;
    border: 1px solid #e4e4e4;
    padding-bottom: 40px;
    border-top: none;
    position: relative;
    height: 68px;
}
.ts-popreplay::before{
    content: "";
    display: block;
    border-width: 14px 9px;
    border-style: solid;
    position: absolute;
    border-color: transparent transparent #e8e8e8 transparent;
    right: 85px;
    top:-28px;
}
.ts-popreplay .tspop-tri{
    content: "";
    display: block;
    border-width: 12px 6px;
    border-style: solid;
    position: absolute;
    border-color: transparent transparent #fafafa transparent;
    right: 88px;
    top:-24px;
}
.ts-popreplay .ts-replaycont{
    margin-top: 15px;
    width: 670px;
    text-align: center;
    float: right;
}
.ts-popreplay .ts-replaycont input{
    display: inline-block;
    width: 550px;
    line-height: 34px;
    border: 1px solid #e6e6e6;
}
.ts-popreplay .ts-replaycont a{
    display: inline-block;
    width: 80px;
    height: 36px;
    background-color: #f68344;
    font-size: 16px;
    text-align: center;
    line-height: 36px;
    border-radius: 5px;
    color: #fff;
    margin-left: 8px;
    vertical-align:middle;
}
.ts-popreplay i{
    position: absolute;
    bottom: 15px;
    right: 50px;
    width: 10px;
    height: 6px;
    background: url(../image/listenSpeak/dropup.png) no-repeat center;
    cursor:pointer;
}
.ts-cardfoot-icon{
    position: absolute;
    bottom: 10px;
    right: 10px;
}
.ts-cardfoot-icon i{
    padding: 5px;
    color: #ccc;
    margin-left:15px;
}
/*评论和回复模块 end*/
/*互动评论区 end*/

/*底部导航样式*/
.ts-page{
    width: 100%;
    text-align: center;
    margin-bottom: 100px;
    -moz-user-select:none;
}
.ts-page span{
    display: inline-block;
    height: 30px;
    line-height: 30px;
    padding:0 12px;
    background-color: #fff;
    text-align: center;
    font-size: 14px;
    cursor: pointer;
    margin:0 4px;
    box-shadow: 0px 2px 3px gray;
}
.ts-page .tspage-ell{
    cursor:auto;
    background-color: #f2f2f2;
    box-shadow: none;
    margin:0;
}
.ts-page span.disable{
    cursor: not-allowed;
    color:#333;
}
.ts-page .page.on{
    background-color: #109d59;
    color: #fff;
}

/*右侧栏部分 start*/
.container .artical-other{
    float:right;
    width:301px;
    /*background:darkgreen;*/
    border-radius:3px;
}
.aside-box{
    box-shadow: 0 5px 10px rgba(0,0,0,0.1);
    margin-bottom:20px;
    background:#fff;
    border-radius:5px;
}
/*信息中心 start*/
.msg-center-up{
    padding:20px;
}
.blueberrypaiIcon{
    margin-bottom:20px;
}
.blueberrypaiIcon img{
    float:left;
    width:80px;
    height:80px;
    display:block;
}
.blueberrypaiIcon h1{
    float:left;
    display:block;
    width:180px;
    height:80px;
    line-height:80px;
    font-size:16px;
    font-weight:700;
    text-indent:20px;
}
.gray{
    background:#fafafa;
}
.square-btn{
    float:left;
    width:82px;
    height:55px;
    text-align: center;
    margin-right:7px;
    line-height:25px;
    padding-top:5px;
    margin-bottom:20px;
}
.square-btn:last-child{
    margin-right:0;
}
.msg-center-down{
    height:82px;
    padding:20px 55px;
}
.concern{
    border:1px solid  transparent;
    border-radius:50%;
    width:60px;
    height:60px;
    background:#14abd1;
