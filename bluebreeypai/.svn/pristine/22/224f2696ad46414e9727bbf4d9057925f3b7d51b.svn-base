    background:url(../image/singer/sixin.png) center top no-repeat;
    cursor:pointer;
}
.private-msg::after{
    content:"私信";
    display:block;
    position:absolute;
    top: 65px;
    left: 17px;
    color:#999;
}
/*信息中心 end*/
/*作者的其他文章/热门推荐公共样式 start*/
.other-blog,.hot-recomment{
    padding:20px;
}
h3.other-blog-title{
    font-size:18px;
    border-bottom:1px solid #e6e6e6;
    padding-bottom:18px;
    position:relative;
    margin-bottom:8px;
}
h3.other-blog-title::after{
    content: "全部";
    display: block;
    width: 40px;
    height: 14px;
    position: absolute;
    top: 3px;
    right: 0;
    font-size: 14px;
    color:#a9a9a9 ;
}
a.other-blog-lists{
    width:260px;
    overflow:hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
    display:block;
    line-height:36px;
}
a.other-blog-lists:hover{
    color:#109d59;
}
/*作者的其他文章/热门推荐公共样式 end*/
.hot-recomment h3.other-blog-title::after{
    content:"更多";
}
.hot-recomment .other-blog-lists{
    text-indent:1.5em;
    position:relative;
}
.hot-recomment .other-blog-lists::before{
    content: "";
    display: block;
    width: 5px;
    height: 5px;
    border-radius: 50%;
    position: absolute;
    top: 16px;
    left: 3px;
    background: #109d59;
}

/*右侧栏部分 end*/
/*导航下面的小三角颜色单独设置*/
